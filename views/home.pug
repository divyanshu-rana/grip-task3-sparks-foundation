extends base

block content
    section#home.home
      #carousel.carousel.slide(data-ride='carousel')
        ol.carousel-indicators
          li.active(data-target='#carousel' data-slide-to='0')
          li(data-target='#carousel' data-slide-to='1')
          li(data-target='#carousel' data-slide-to='2')
          li(data-target='#carousel' data-slide-to='3')
        .carousel-inner
          .carousel-item.active
            img.d-block.w-100.home_bg(src='./img/BG-images/education.jpg' alt='#')
            .overlay_home
            .container.home-content
              .quote
                p Education is a Right
                p Not a Privilege
              .container.donate
                h3 Give Children The Childhood They Deserve
                a(href='/donate') DONATE
          .carousel-item
            img.d-block.w-100.home_bg(src='./img/BG-images/food.png' alt='#')
            .overlay_home
            .container.home-content
              .quote
                p If You Can't Feed 100
